                            Grid.Column="12"
                            BorderBrush="GoldenRod"
                            BorderThickness="0,0,0,3">
                            <Label Classes="Tile NotUsed" />
                        </Border>
                        <Border
                            Grid.Row="3"
                            Grid.Column="13"
                            BorderBrush="GoldenRod"
                            BorderThickness="0,0,0,3">
                            <Label Classes="Tile NotUsed" />
                        </Border>
                        <Border
                            Grid.Row="3"
                            Grid.Column="14"
                            Background="Transparent"
                            BorderBrush="GoldenRod"
                            BorderThickness="3,3,0,0" />
                        <Border
                            Grid.Row="4"
                            Grid.ColumnSpan="15"
                            MinHeight="2"
                            Margin="0,1"
                            BorderBrush="{DynamicResource TextControlBorderBrush}"
                            BorderThickness="0,2">
                            <TextBlock
                                Margin="0,1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="11"
                                Text="{Binding Title}" />
                        </Border>
                        <Grid
                            Grid.Row="5"
                            Grid.ColumnSpan="15"
                            Margin="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ZIndex="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="11" />
                                <RowDefinition Height="11" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,3,0"
                                Orientation="Horizontal">
                                <Label Classes="Alphabet Enabled" FontWeight="Bold">
                                    A
                                </Label>
                                <Label Classes="Alphabet Enabled" FontWeight="Bold">
                                    E
                                </Label>
                                <Label Classes="Alphabet Enabled" FontWeight="Bold">
                                    I
                                </Label>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,3,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Label Classes="Alphabet Enabled" FontWeight="Bold">
                                    O
                                </Label>
                                <Label Classes="Alphabet Enabled" FontWeight="Bold">
                                    U
                                </Label>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Label Classes="Alphabet Enabled">
                                    B
                                </Label>
                                <Label Classes="Alphabet Enabled">
                                    C
                                </Label>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Classes="Alphabet Enabled">
                                    D
                                </Label>
                                <Label Classes="Alphabet Enabled">
                                    F
                                </Label>
                                <Label Classes="Alphabet Enabled">
                                    G
                                </Label>
                                <Label Classes="Alphabet Enabled">
                                    H
                                </Label>

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="9"
                                    Classes="Alphabet Enabled">
                                    J
                                </Label>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="10"
                                    Classes="Alphabet Enabled">
                                    K
                                </Label>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="11"
                                    Classes="Alphabet Enabled">
                                    L
                                </Label>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="12"
                                    Classes="Alphabet Enabled">
                                    M
                                </Label>

                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Classes="Alphabet Enabled">
                                    N
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Classes="Alphabet Enabled">
                                    P
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    Classes="Alphabet Enabled">
                                    Q
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="5"
                                    Classes="Alphabet Enabled">
                                    R
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="6"
                                    Classes="Alphabet Enabled">
                                    S
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="7"
                                    Classes="Alphabet Enabled">
                                    T
                                </Label>

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="8"
                                    Classes="Alphabet Enabled">
                                    V
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="9"
                                    Classes="Alphabet Enabled">
                                    W
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="10"
                                    Classes="Alphabet Enabled">
                                    X
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="11"
                                    Classes="Alphabet Enabled">
                                    Y
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="12"
                                    Classes="Alphabet Enabled"
                                    FontStyle="">
                                    Z
                                </Label>

                            </StackPanel>


                        </Grid>
                    </Grid>
                </Border>
            </Viewbox>
            <Grid
                Grid.Row="1"
                Margin="0"
                HorizontalAlignment="Stretch"
                ColumnDefinitions="auto,auto,*,auto,auto">
                <Button
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Click="GotToSteup_Click"
                    ToolTip.Tip="Board Setup">
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Height="20"
                            Data="{StaticResource GearIconData}"
                            Fill="{DynamicResource SystemBaseHighColor}"
                            Stretch="Uniform" />
                    </StackPanel>
                </Button>
                <Button
                    Grid.Column="1"
                    Click="PreviousRound_Click"
                    IsVisible="{Binding #Root.((vm:WheelOfFortuneViewModel)DataContext).CanGoBack}"
                    ToolTip.Tip="Go to Previous Round">
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Height="20"
                            Data="{StaticResource backIcon}"
                            Fill="{DynamicResource SystemBaseHighColor}"
                            Stretch="Uniform" />
                        <Path
                            Height="20"
                            Data="{StaticResource backIcon}"
                            Fill="{DynamicResource SystemBaseHighColor}"
                            Stretch="Uniform" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="3"
                    Click="NextRound_Click"
                    IsVisible="{Binding #Root.((vm:WheelOfFortuneViewModel)DataContext).CanGoNext}"
                    ToolTip.Tip="Go to Next Round">
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Height="20"
                            Data="{StaticResource backIcon}"
                            Fill="{DynamicResource SystemBaseHighColor}"
                            Stretch="Uniform">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleX="-1.0" />
                            </Path.RenderTransform>
                        </Path>
                        <Path
                            Height="20"
                            Data="{StaticResource backIcon}"
                            Fill="{DynamicResource SystemBaseHighColor}"
                            Stretch="Uniform">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleX="-1.0" />
                            </Path.RenderTransform>
                        </Path>
                    </StackPanel>
                </Button>
                <Button
                    Grid.Column="4"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Click="PlayerSolved_Click"
                    ToolTip.Tip="Puzzle was Solved - Reveal Answer">
                    <TextBlock Margin="10,0" FontSize="20">
                        Puzzle Solved!
                    </TextBlock>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
