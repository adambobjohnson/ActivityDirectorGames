                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Background="Transparent"
                            BorderBrush="GoldenRod"
                            BorderThickness="0,0,3,3" />
                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            BorderBrush="GoldenRod"
                            BorderThickness="0,3,0,0">
